<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/lil_margin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/std_margin">

        <TextView
            android:id="@+id/order_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="30sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            tools:text="Заказ N" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/order_header"
            android:textSize="18sp"
            android:textStyle="bold"

            tools:text="10 марта 2018" />

        <TextView
            android:id="@+id/order_summ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@id/order_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="30sp"

            android:textStyle="bold"
            tools:text="5000p" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/std_margin"
        android:src="@color/colorGrayDark" />
</LinearLayout>
