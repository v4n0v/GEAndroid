<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:padding="@dimen/std_margin"
    android:layout_marginBottom="@dimen/lil_margin"
 >
    <!--можно лого производителя вставить-->


    <TextView
        android:id="@+id/item_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="лобовое" />



    <TextView
        android:id="@+id/item_cart_factory"
        android:layout_below="@id/item_type_title"
        tools:text="СуперЗавод"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/item_cart_insert_price_title"
        android:text="Установка"
        android:layout_below="@id/item_cart_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_cart_insert_price"
        tools:text="2500"
        android:layout_below="@id/item_cart_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/item_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/item_cart_insert_price_title"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text="2000" />
    <ImageView
        android:layout_marginTop="@dimen/std_margin"
        android:id="@+id/item_cart_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/item_cart_insert_price"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>