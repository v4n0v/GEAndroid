<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:padding="@dimen/std_margin"
    android:layout_marginBottom="@dimen/lil_margin">
    <!--можно лого производителя вставить-->


    <com.example.v4n0v.geandroid.custom.TextViewPlus
        foo:customFont="roboto.ttf"
        android:id="@+id/item_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"

        android:textStyle="bold"
        tools:text="Замена" />

    <com.example.v4n0v.geandroid.custom.TextViewPlus
        foo:customFont="roboto.ttf"
        android:id="@+id/item_serv_time_title"
        android:text="Время"

        android:layout_below="@id/item_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.v4n0v.geandroid.custom.TextViewPlus
        foo:customFont="roboto.ttf"
        android:id="@+id/item_serv_time"
        tools:text="10мин"

        android:layout_below="@id/item_cart_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_serv_time_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <com.example.v4n0v.geandroid.custom.TextViewPlus
        foo:customFont="roboto.ttf"
        android:id="@+id/item_serv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/item_serv_time_title"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text="2000p" />
    <ImageView
        android:layout_marginTop="@dimen/std_margin"
        android:id="@+id/item_cart_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/item_serv_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>