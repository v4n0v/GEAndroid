<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextHintStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="CounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="BlackButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Header">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="standart_AppBarLayoutStyle" parent="@style/Widget.Design.AppBarLayout"></style>

    <style name="standart_AppBarLayoutStyle.Black">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="standart_AppBarLayoutStyle.Green">
        <item name="android:background">@color/colorPrimaryGreen</item>
    </style>

    <style name="tabLayoutStyle" parent="@style/Widget.Design.TabLayout"></style>

    <style name="tabLayoutStyle.Black">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="tabLayoutStyle.Green">
        <item name="android:background">@color/colorPrimaryGreen</item>
    </style>


    <style name="fabStyle" parent="@style/Widget.AppCompat.Button">

    </style>

    <style name="fabStyle.Black">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="fabStyle.Green">
        <item name="backgroundTint">@color/colorAccentGreen</item>
    </style>


    <style name="fillStyle" parent="TextAppearance.AppCompat.Small">

    </style>

    <style name="fillStyle.Black">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="fillStyle.Green">
        <item name="android:background">@color/colorPrimaryDarkGreen</item>
    </style>

    <style name="iconStyle" parent="TextAppearance.AppCompat.Small">

    </style>

    <style name="iconStyle.Black">
        <item name="android:src">@drawable/ic_arrow_drop_up</item>
    </style>

    <style name="iconStyle.Green">
        <item name="android:src">@drawable/ic_arrow_drop_up_green</item>
    </style>

    <style name="canvasStyle" parent="Theme.AppCompat"></style>

    <style name="canvasStyle.Black">
        <item name="android:background">@color/colorGrayDark</item>
    </style>

    <style name="canvasStyle.Green">
        <item name="android:background">@color/colorGrayLight</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources><!--<item name="android:layout_margin">20dp</item>-->